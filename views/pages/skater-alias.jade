div.row.profile-container
  div.col-sm-5
    div.row
      div.col-sm-7
      div.col-sm-5
        img(ng-if="aliasPage.picture && aliasPage.picture.source",ng-src="{{aliasPage.picture.source}}",
        class="thumbnail img-responsive")
  div.col-sm-7
    h1 {{aliasPage.name}}
    | &nbsp;
    span(follow-button="" alias-id="aliasPage._id").follow-button-container
    a(ng-if="editable",ng-href="/profile/{{aliasPage.username}}/edit" ,class="btn btn-default btn-xs glyphicon " +
    "glyphicon-wrench" +
    " " +
    "edit-alias")

div.row
  div.col-md-2
  div().col-md-8
    div(ng-repeat="posts in aliasPage.chuckedPosts").row.row-container
      div(ng-repeat="post in posts").col-sm-4.post-container
        div(ng-if="post.type == 'facebook'").post-detail
          img(ng-src="{{post.source}}",class="post-image")
        div(ng-if="post.type == 'youtube'").post-detail
          iframe(ng-if="post.type == 'youtube'",class="embed-responsive-item", ng-src="{{youtube(post.video_id)}}",
          frameborder="0")
        div(ng-if="post.push_posts.type == 'vimeo'").post-detail
          iframe(ng-if="post.type == 'vimeo'",class="embed-responsive-item", ng-src="{{vimeo(post" +
          ".video_id)}}",frameborder="0", webkitallowfullscreen="", mozallowfullscreen="", allowfullscreen="")
  div.col-md-2