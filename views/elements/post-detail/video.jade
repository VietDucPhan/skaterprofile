div.col-sm-8
  div.post-detail-container
    div.post-detail
      div.row
        div.col-xs-8
          div(vote-buttons='#{data._id}')
        div.col-xs-4
          div(dropdown='',class='pull-right').btn-group
            button(class="btn btn-default dropdown-toggle no-border", dropdown-toggle="", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false")
              span.caret
              span(class="sr-only") Split button!
            ul(role="menu", aria-labelledby="split-button").dropdown-menu
              li
                a(ng-href="#") Report
              li.divider
              li
                a(href="#") Delete
    div(class="embed-responsive embed-responsive-16by9")
      if (data.type = 'youtube')
        iframe(class="embed-responsive-item",src="https://www.youtube.com/embed/#{data.video_id}?rel=0&amp;showinfo=0")
      else
        iframe(class="embed-responsive-item",src="https://player.vimeo.com/video/#{data.video_id}?title=0&byline=0&portrait=0")
    div.post-title
      h1 #{data.name}
      if data.description
        blockquote
          p #{data.description}
div.col-sm-4