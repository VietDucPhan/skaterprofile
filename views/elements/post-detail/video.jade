div.col-sm-8
  div.post-detail-container
    div.post-detail
      div.row
        div.col-xs-8
          a(ng-if="postData.posted_by_alias.picture.picture",class="profile-picture",href="/{{postData.posted_by_alias.username}}")
            img(ng-src="{{postData.posted_by_alias.picture.picture}}", ng-click="dismiss()")
          a(ng-click="dismiss()",class="btn username", href="/{{postData.posted_by_alias.username}}") {{postData.posted_by_alias.name}}
          span(ng-if="postData.posted_by_alias._id != postData.posted_to_alias._id") > &nbsp;
          a(ng-if="postData.posted_to_alias.picture.picture && postData.posted_by_alias._id != postData.posted_to_alias._id",class="profile-picture",href="/{{postData.posted_to_alias.username}}", ng-click="dismiss()")
            img(ng-src="{{postData.posted_to_alias.picture.picture}}")
          a(ng-if="postData.posted_by_alias._id != postData.posted_to_alias._id", ng-click="dismiss()",class="btn username", href="/{{postData.posted_to_alias.username}}") {{postData.posted_to_alias.name}}
        div.col-xs-4
          div(dropdown='',class='pull-right').btn-group
            button(class="btn btn-default dropdown-toggle no-border", dropdown-toggle="", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false")
              span.caret
              span(class="sr-only") Split button!
            ul(role="menu", aria-labelledby="split-button").dropdown-menu
              li
                a(ng-href="#") Report
              li(ng-if="isDeletable").divider
              li(ng-if="isDeletable")
                a(href="#",ng-click="delete(postData._id)") Delete
    div(class="embed-responsive embed-responsive-16by9")
      iframe(class="embed-responsive-item",src="{{video_src}}")
    div.row
      div.post-title
        div.col-sm-9.post-title
          blockquote(ng-if="postData.name")
            h1 {{postData.name}}
        div.col-sm-3.post-title
          div(vote-buttons='{{postData._id}}', up-votes="postData.up_votes", down-votes="postData.down_votes").vote-buttons
  div.post-comment-section
    div.post-comment-form
      div.row
        div.col-sm-12
          ul(class="media-list")
            li(class="media", ng-repeat="comment in postData.comments")
              div(class="media-left")
                a(ng-if="comment.author.picture.picture",class="profile-picture",href="/{{comment.author.username}}")
                  img(ng-src="{{comment.author.picture.picture}}", ng-click="dismiss()")
              div(class="media-body")
                a(href="/{{comment.author.username}}",ng-click="dismiss()").media-heading {{comment.author.name}}
                br
                span  {{comment.message}}
      div.row
        div.col-sm-12
            div(comment-box="{{postData._id}}").input-group
div.col-sm-4